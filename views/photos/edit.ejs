

<% include ../partials/header %>

    <div class="container">
        <div class="row">
            <h1 style="text-align: center;">Edit <%= foundPhoto.title %></h1>

            <div style="width: 30%; margin: 25px auto;">
                <form action="/photos/<%= foundPhoto._id %>?_method=PUT" method="POST">
                    <div class="form-group"> <input class="form-control" type="text" value="<%= foundPhoto.title %>" name="photo[title]">
                    </div>
                    <div class="form-group"> <input class="form-control" type="text" value="<%= foundPhoto.image %>"  name="photo[image]">
                    </div>
                    <div class="form-group"> <input class="form-control" type="text" value="<%= foundPhoto.description %>"  name="photo[description]">
                    </div>
                    <div class="form-group"> <button class="btn btn-lg btn-primary btn-default">Submit!</button>
                    </div>
                </form>
                <a href="/photos">Go Back!</a>
            </div>


        </div>
    </div>
<% include ../partials/footer %>