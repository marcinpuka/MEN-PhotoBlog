

<% include ../partials/header %>


    

    <div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1>Welcome to Photoblog!</h1>
                <p>View our hand-picked photos from all over the world.</p>
                <p>
                    <a class="btn btn-primary btn-lg" href="/photos/new">Add a New Photo</a>
                </p>
            </div>
        </header>




        <div class="row text-center" style="display:flex; flex-wrap: wrap;">
                <% photos.forEach( (photo) => { %>
                    <div class="col-md-3 col-sm-6">
                        <div class="thumbnail">
                            <img src="<%= photo.image %>">
                            <div class="caption">
                                <h4><%= photo.title %></h4>
                            </div>
                            <p>
                                <a href="/photos/<%= photo._id %>" class="btn btn-primary">More Info</a>
                            </p>                         

                        </div>                       
                    </div>
                    <% }); %>
        </div>
    </div>
    <% include ../partials/footer %>